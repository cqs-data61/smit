# Set a port number to OCSP server.
OCSPPORT = "8888"
# Set the private key of OCSP server.
# The private key usually has been genearted during OCSP server setup.
# For example, the path to OCSP server key could be "~/SG-CA/private/ocsp.key.pem".
OCSPSK = "/home/nanl/OCSP/private/ocsp.sg.ca.com.key.pem"
# Set the certifiate of OCSP server.
# The certificate usually has been genearted during OCSP server setup.
# For example, the path to OCSP certificate could be "~/SG-CA/ocsp.cert.pem".
OCSPCERT = "/home/nanl/OCSP/ocsp.sg.ca.com.cert.pem"
# Set the certificate of simulated global CA.
CACERT = "/home/nanl/SG-CA/cacert.pem"
# Set the certificate database of simulated global CA.
CERTDB = "/home/nanl/SG-CA/index.txt"
